# To lint the entire playbook, run with:
#
#       ansible-lint --format=full mythtv.yml 2>&1 | less
#
# Documentation: https://ansible-lint.readthedocs.io/en/latest/default_rules
#

---

offline: false

enable_list:  # These are opt-in rules, uncomment to enable
  - name[prefix]
  - empty-string-compare
  - no-log-password
  - no-prompting
  - no-same-owner

skip_list:
  - fqcn
  - ignore-errors
  - name[missing]
  - no-changed-when

warn_list:
  - latest[git]
  - name[prefix]

...

