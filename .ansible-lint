# To lint the entire playbook, run with:
#
#       ansible-lint --format=full mythtv.yml 2>&1 | less
#
# Documentation: https://ansible-lint.readthedocs.io/en/latest/default_rules
#

---

offline: false

enable_list:
  - name[prefix]  # This is an opt-in rule, uncomment to enable

skip_list:
  - fqcn
  - ignore-errors
  - latest[git]
  - name[casing]
  - name[missing]
  - name[prefix]
  - name[template]
  - no-changed-when

