# To run: ansible-lint mythtv.yml
#
# Documentation: https://ansible-lint.readthedocs.io/en/latest/default_rules

---

offline: true

skip_list:
  - command-instead-of-module
  - command-instead-of-shell
  - fqcn
  - line-length
  - name
  - no-changed-when
  - unnamed-task

warn_list:
  - ignore-errors
  - latest[git]
  - no-free-form
  - role-name
  - var-naming[pattern]

...

